    %% User connections
    TRADER --> PORTAL
    AGENT --> PORTAL
    FORWARDER --> PORTAL
    BROKER --> PORTAL
    TRUCKER --> MOBILE
    
    TRADER --> MOBILE
    AGENT --> MOBILE

    %% Portal to API Gateway
    PORTAL --> API_GW
    MOBILE --> API_GW

    %% API Gateway to Services
    API_GW --> SERVICES
    API_GW --> IAM

    %% Government System integrations
    SERVICES <--> ASYCUDA
    SERVICES <--> SINTECE
    SERVICES <--> PICE
    SERVICES <--> SIGT
    SERVICES <--> SICOEX
    SERVICES <--> DTSER

    %% Port integrations
    SERVICES <--> JUP
    SERVICES <--> TOS
    SERVICES <--> CPE

    %% Other integrations
    SERVICES <--> ANTT
    SERVICES <--> BANKS
    SERVICES <--> OGA

