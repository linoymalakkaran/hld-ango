graph TB
    subgraph "External Users"
        TRADER[Traders<br/>Importers/Exporters]
        AGENT[Shipping Agents]
        FORWARDER[Freight Forwarders]
        BROKER[Customs Brokers]
        TRUCKER[Truckers]
    end

    subgraph "JUL Single Window System"
        PORTAL[Web Portal]
        MOBILE[Mobile Apps]
        API_GW[API Gateway]
        SERVICES[Business Services]
        IAM[Identity & Access<br/>Management]
    end

    subgraph "Government Systems"
        ASYCUDA[ASYCUDA<br/>Customs System]
        SINTECE[SINTECE<br/>Single Window]
