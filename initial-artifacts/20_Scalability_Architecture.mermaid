graph TB
    subgraph "Horizontal Scaling"
        HPA[Horizontal Pod Autoscaler]
        APP_REPLICAS[App Replicas<br/>2-20 pods]
        STATELESS[Stateless Services]
    end

    subgraph "Database Scaling"
        DB_PRIMARY[(Primary)]
        DB_REPLICA1[(Replica 1)]
        DB_REPLICA2[(Replica 2)]
        DB_REPLICAN[(Replica N)]
        CONN_POOL[Connection Pooling]
    end

    subgraph "Cache Scaling"
        REDIS_CLUSTER[Redis Cluster<br/>6 nodes]
        CACHE_PARTITION[Partitioned Data]
    end

    subgraph "Load Distribution"
        LB[Load Balancer]
        ROUND_ROBIN[Round Robin]
        LEAST_CONN[Least Connections]
    end

    HPA -.Scale.-> APP_REPLICAS
    APP_REPLICAS --> STATELESS

    LB --> ROUND_ROBIN
    ROUND_ROBIN --> APP_REPLICAS

    APP_REPLICAS --> CONN_POOL
    CONN_POOL --> DB_PRIMARY
    CONN_POOL -.Read.-> DB_REPLICA1
    CONN_POOL -.Read.-> DB_REPLICA2

    APP_REPLICAS --> REDIS_CLUSTER
    REDIS_CLUSTER --> CACHE_PARTITION

    style HPA fill:#50C878
    style APP_REPLICAS fill:#4A90E2
    style DB_PRIMARY fill:#3498DB
    style REDIS_CLUSTER fill:#E67E22
