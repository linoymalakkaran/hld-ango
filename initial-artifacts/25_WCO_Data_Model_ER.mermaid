    PARTY {
        string party_id PK
        string identification
        string name
        string role_code
        string tin
    }

    TRANSPORT ||--o{ CONTAINER : includes

    TRANSPORT {
        string transport_id PK
        string means_id
        string mode_code
        date arrival_date
    }

    CONTAINER {
        string container_id PK
        string number
        string type_code
        string seal_number
    }

    DUTY_TAX {
        string duty_id PK
        string type_code
        decimal amount
        decimal rate
    }

    PAYMENT {
        string payment_id PK
        string declaration_id FK
        decimal amount
        string status
